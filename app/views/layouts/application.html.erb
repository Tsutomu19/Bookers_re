<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Bookers</title>
  </head>
<body>
<header>
<div class="container">
<nav class="navbar navbar-inverse">
  <div class="navbar-header">
  </div>

  <a class="navbar-brand navbar-left">Bookers</a>

  <div id="gnavi" class="collapse navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li><%= link_to "Home", user_path(current_user), class: "glyphicon glyphicon-home" %></li>
      <li><%= link_to "Users", users_path, class: "glyphicon glyphicon-link" %></li>
      <li><%= link_to "Books", books_path, class: "glyphicon glyphicon-edit" %></li>
      <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-in" %></li>
    <% else %>
      <li><%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %></li>
      <li><%= link_to "About", home_about_path, class: "glyphicon glyphicon-link" %></li>
      <li><%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %></li>
      <li><%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
      </li>
    <% end %>
    </ul>
  </div>
</nav>
</div>
</header>
<%= yield %>
</body>
</html>