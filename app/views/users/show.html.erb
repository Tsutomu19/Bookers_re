

<h1>New book</h1>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<main>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<% @books.each do |book| %>
    <tbody>
        <tr>
            <th colspan="1"></th>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>

        </tr>
    </tbody>
<% end %>
</table>