<% if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>

      <% @book.errors.full_messages.each do |msg| %>
        <li>
        <%= msg %>
        </li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, fallback: 'no_image.jpg' %><br>
    <table class="table">
      <tr></tr>
      <tr>
    	  <th>name</th>
    	  <th><%= user.name %></th>
      </tr><br>
      <tr>
    	  <th>introduction</th>
    	  <th><%= user.introduction%></th>
      </tr>
    </table>
    <% if @user.id == current_user.id %>
        <p><%= link_to "Edit", edit_user_path(user) %></p>
    <% end %>

<h2>New book</h2>

<%= form_for(book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
<% end %>